
function update () {

    game.physics.arcade.collide(player, platforms);

    player.body.velocity.x = 0;

    if (keyLeft.isDown)
    {
        player.body.velocity.x = -250;
    }
    else if (keyRight.isDown)
    {
        player.body.velocity.x = 250;
    }

    if (keyUp.isDown)
    {
        player.body.y -= 20;
    }
    else if (keyDown.isDown)
    {
        player.body.y += 20;
    }
    
}
